<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p>クライアント名</p>
      <%= @post.content %>
      <div class="post-time">
       <%= @post.created_at %>
      </div>
      <div class="post-menus">
        <%= link_to("編集", "/posts/#{@post.id}/edit") %>
      </div>

      <p>住所</p>
      <%= @post.address %>
      <div class="post-time">
        <%= @post.created_at %>
      </div>
      <div class="post-menus">
        <%= link_to("編集", "/posts/#{@post.id}/address") %>
      </div>

      <p>連絡先</p>
      <%= @post.phonenumber %>
      <div class="post-time">
       <%= @post.created_at %>
      </div>
      <div class="post-menus">
        <%= link_to("編集", "/posts/#{@post.id}/phonenumber") %>
      </div>

      <p>契約書状況</p>
      <%= @post.agreement %>
      <div class="post-time">
        <%= @post.created_at %>
      </div>
      <div class="post-menus">
        <%= link_to("編集", "/posts/#{@post.id}/agreement") %>
      </div>

      <p>備考</p>
      <%= @post.remarka %>
      <div class="post-time">
        <%= @post.created_at %>
      </div>
      <div class="post-menus">
        <%= link_to("編集", "/posts/#{@post.id}/remarka") %>
      </div>
    </div>
    <div class="sakuzyo">
      <p><%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %></p>
    </div>
  </div>
</div>
